<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        title QR Code attachments

        style(type="text/css").
            td.qr-image {
                padding-left: 5%;
                padding-top: 8px;
            }

            .heading {
                text-align: center;
            }

            table, tr, td {
                border-collapse: collapse;
                border: 3px solid black;
            }
    body
        h1(class = "heading") #{data[0][0].batchNumber}
        table(width = "100%" border = "1")
            each val, index in data
                tr(width = "100%")
                    each attachment in data[index]
                        td(width = "75px" height = "75px" class = "qr-image")
                            - const path = 'file:///' + attachment.fileLocation;
                            img(src = path alt = path width = "75px" height = "75px")
                            p #{attachment.qrId}
